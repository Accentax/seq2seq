{
    "dataset_reader": {
        "type": "copynet_seq2seq",
        "source_token_indexers": {
            "tokens": {
                "type": "single_id",
                "namespace": "source_tokens"
            }
        },
        "source_tokenizer": {
            "type": "word",
            "word_splitter": {
                "type": "spacy"
            }
        },
        "target_namespace": "target_tokens",
        "target_tokenizer": {
            "type": "word"
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 80,
        "padding_noise": 0,
        "sorting_keys": [
            [
                "source_tokens",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "copynet_seq2seq",
        "attention": {
            "type": "bilinear",
            "matrix_dim": 256,
            "vector_dim": 256
        },
        "beam_size": 5,
        "encoder": {
            "type": "stacked_self_attention",
            "feedforward_hidden_dim": 128,
            "hidden_dim": 256,
            "input_dim": 25,
            "num_attention_heads": 8,
            "num_layers": 1,
            "projection_dim": 128
        },
        "max_decoding_steps": 50,
        "source_embedder": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 25,
                "trainable": true,
                "vocab_namespace": "source_tokens"
            }
        },
        "target_embedding_dim": 256
    },
    "train_data_path": "small_test.tsv",
    "validation_data_path": "small_test.tsv",
    "trainer": {
        "cuda_device": -1,
        "num_epochs": 10,
        "optimizer": {
            "type": "adam",
            "lr": 0.1
        },
        "patience": 10
    }
}