{
    "dataset_reader":
    {
        "target_namespace": "target_tokens",
        "type": "copynet_seq2seq",
        "lazy": true,
        "source_tokenizer":
        {
            "type": "word",
            "word_splitter":
            {
                "type": "spacy"
            }
        },
        "target_tokenizer":
        {
            "type": "word"
        },
        "source_token_indexers":
        {
            "tokens":
            {
                "type": "single_id",
                "namespace": "source_tokens"
            }
        },


    },
    "train_data_path": "./data/train_qa_seq2seq.tsv",
    "validation_data_path": "small_test.tsv",
    "model":
    {
        "type": "copynet_seq2seq",
        "source_embedder":
        {
            "tokens":
            {
                "type": "embedding",
                "vocab_namespace": "source_tokens",
                "embedding_dim": 25,
                "trainable": true
            }
        },

        "encoder":
        {
            "type": "stacked_self_attention",
            "input_dim": 25,
            "hidden_dim": 256,
            "projection_dim":128,
            "feedforward_hidden_dim":128,
            "num_attention_heads":8,
            "num_layers": 1
        },
        "attention":
        {
            "type": "bilinear",
            "vector_dim": 256,
            "matrix_dim": 256
        },
        "target_embedding_dim": 256,
        "beam_size": 4,
        "max_decoding_steps": 30
    },
    "iterator":
    {
        "type": "bucket",
        "padding_noise": 0.0,
        "batch_size": 80,
        "sorting_keys": [
            ["source_tokens", "num_tokens"]
        ]
    },
    "trainer":
    {
        "num_epochs": 2,
        "patience": 10,
        "cuda_device": -1,
        "optimizer":
        {
            "type": "adam",
            "lr": 0.1
        }
    }
}